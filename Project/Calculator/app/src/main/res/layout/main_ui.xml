<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Name"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="Calcuator"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:paddingLeft="135dp">
            </TextView>
            <TextView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/corner_bg"
                android:textSize="50dp"
                android:text="0"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/corner_bg"
                android:textSize="50dp"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical"
            android:background="@drawable/corner_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Reset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="C"
                    android:textColor="@color/dark_blue">
                </Button>
                <Button
                    android:id="@+id/div"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="รท"
                    android:textColor="@color/dark_blue">
                </Button>
                <Button
                    android:id="@+id/mul"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="ร"
                    android:textColor="@color/dark_blue">
                </Button>
                <Button
                    android:id="@+id/Del"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="30dp"
                    android:text="Del"
                    android:textColor="@color/dark_blue">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="7"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="8"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="9"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/sub"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="53dp"
                    android:text="-"
                    android:textColor="@color/dark_blue">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="4"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="5"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="6"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/add"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="53dp"
                    android:text="+"
                    android:textColor="@color/dark_blue">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="96dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/num1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="1"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="2"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="3"
                    android:textColor="@color/black">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="96dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/per"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="%"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/num0"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="0"
                    android:textColor="@color/black">
                </Button>
                <Button
                    android:id="@+id/point"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_simple"
                    android:layout_marginLeft="20dp"
                    android:textSize="45dp"
                    android:text="."
                    android:textColor="@color/black">
                </Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/equal"
            android:layout_width="90dp"
            android:layout_height="192dp"
            android:layout_x="320dp"
            android:layout_y="540dp"
            android:text="="
            android:textSize="80dp"
            android:background="@drawable/corner">
        </Button>
    </AbsoluteLayout>
</androidx.constraintlayout.widget.ConstraintLayout>