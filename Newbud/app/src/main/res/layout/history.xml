<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="180dp"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="a red bird"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/corner2"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:text="this is a small red bird with a white belly and a large beak."
                android:paddingLeft="5dp"
                android:background="@drawable/corner"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="180dp"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="a small bill"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/corner2"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:text="this bird has a small snubbed orange bill with a bright white eyering"
                android:paddingLeft="5dp"
                android:background="@drawable/corner"
                >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="180dp"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="a blue bird"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/corner2"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner"
                android:text="this bird is white with a blue head and wings."
                android:paddingLeft="5dp"
                >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="180dp"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="fishing"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/corner2"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner"
                android:text="a man is fishing near a river"
                android:paddingLeft="5dp"
                >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="180dp"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="grey chest"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:background="@drawable/corner2"
                android:layout_marginLeft="10dp"
                >

            </TextView>
            <EditText
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner"
                android:text="the bird had a white and grey speckled chest with a short orange beak."
                android:paddingLeft="5dp"
                >
            </EditText>
        </LinearLayout>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/pen"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp">

        </ImageView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/tabhost"
        >
    </ImageView>


</LinearLayout>
